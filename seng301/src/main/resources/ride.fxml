<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane prefHeight="139.0" prefWidth="354.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.RideController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="31.5" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="91.0" minHeight="60.0" prefHeight="79.0" valignment="CENTER" vgrow="SOMETIMES" />
      <RowConstraints minHeight="0.0" percentHeight="20.0" prefHeight="60.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="184.0" vgrow="SOMETIMES" />
    </rowConstraints>
   <children>
      <ComboBox fx:id="useTripCombo" onAction="#useTrip" promptText="Trip to be used?" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets left="10.0" />
         </GridPane.margin>
      </ComboBox>
      <ComboBox fx:id="noOfSeatsCombo" onAction="#numberOfSeats" promptText="Number of Seats Available?" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets left="10.0" right="10.0" />
         </GridPane.margin>
      </ComboBox>
      <Button fx:id="shareRideButton" mnemonicParsing="false" onAction="#shareRideButton" text="Share Ride" GridPane.halignment="RIGHT" GridPane.rowIndex="2" GridPane.valignment="BOTTOM">
         <GridPane.margin>
            <Insets bottom="10.0" right="10.0" />
         </GridPane.margin></Button>
      <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButton" text="Back" GridPane.halignment="LEFT" GridPane.rowIndex="2" GridPane.valignment="BOTTOM">
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" />
         </GridPane.margin></Button>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="39.0" prefWidth="412.0" text="Share Ride" GridPane.halignment="CENTER">
         <font>
            <Font size="33.0" />
         </font>
      </Label>
   </children>
</GridPane>
